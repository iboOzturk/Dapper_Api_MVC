@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Servisler</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Durumu</th>                         
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ServiceID</th>
                                    <td>@item.ServiceName</td>
                                    <td>
                                        <a href="/Service/SwitchStatus/@item.ServiceID" class="@(item.ServiceStatus ? "btn btn-outline-success" : "btn btn-outline-warning")">
                                            @(item.ServiceStatus ? "Aktif" : "Pasif")
                                        </a>
                                    </td>                                  

                                    <td>
                                        <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">
                                            Sil
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Service/UpdateService/@item.ServiceID" class="btn btn-info">
                                            Güncelle
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Service/AddService/" class="btn btn-success">Yeni Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>


