@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">

        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlanlar</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                             
                                <th scope="col">İl</th>
                              
                                <th scope="col">Kategori</th>
                                <th scope="col">Günün Fırsatı</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.productID</th>
                                    <td>@item.title</td>
                                    <td>@item.price</td>
                                    <td>@item.type</td>
                                 
                                    <td>@item.city</td>
                                 
                                    <td>@item.categoryName</td>
                                   
                                    <td>
                                    <a href="/Products/ChangeDealOfTheDay/@item.productID"
                                     class="@(item.DealOfTheDay?"btn btn-outline-success":"btn btn-outline-warning")">
                                        @(!item.DealOfTheDay ? "✓" : "✗")                                      
                                    </a>
                                   
                                  
                                </td>
                                   
                                    <td>
                                        <a href="/Product/DeleteProduct/@item.productID" class="btn btn-danger">
                                            Sil
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Product/UpdateProduct/@item.productID" class="btn btn-info">
                                            Güncelle
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Product/ProductDetail/@item.productID" class="btn btn-primary">
                                            Detaylar
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                <a href="/Products/AddProduct/" class="btn btn-success">Yeni İlan Ekle</a>
                </div>
            </div>
        </div>
    
</div>

