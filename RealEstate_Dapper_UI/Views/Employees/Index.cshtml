@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Çalışanlar</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad Soyad</th>
                                <th scope="col">Görevi</th>
                                <th scope="col">Mail Adresi</th>
                                <th scope="col">Telefon Numarası</th>
                                <th scope="col">Durumu</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.EmployeeID</th>
                                    <td>@item.Name</td>
                                    <td>@item.Title</td>
                                    <td>@item.Mail</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>

                                        <a href="#" class="@(item.Status ? "btn btn-outline-success" : "btn btn-outline-warning")">
                                            @(item.Status ? "Aktif" : "Pasif")
                                        </a>

                                    </td>
                                    <td>
                                        <a href="/Employees/DeleteEmployee/@item.EmployeeID" class="btn btn-danger">
                                            Sil
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Employees/UpdateEmployee/@item.EmployeeID" class="btn btn-info">
                                            Güncelle
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Employees/AddEmployee/" class="btn btn-success">Yeni Çalışan Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
