@model UpdateWhoWeAreDto
@{
    ViewData["Title"] = "UpdateWhoWeAre";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h1>Biz Kimiz Güncelleme</h1>
                <form method="post">
                    <input type="hidden" asp-for="WhoWeAreDetailID" />
                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Alt Başlık</label>
                    <input type="text" asp-for="Subtitle" class="form-control" />
                    <br />
                    <label>Açıklam 1</label>
                    <input type="text" asp-for="Description1" class="form-control" />
                    <br />
                    <label>Açıklama 2</label>
                    <input type="text" asp-for="Description2" class="form-control" />
                    <br />
                   
                    <button class="btn btn-success">Güncelle</button>
                </form>

            </div>
        </div>
    </div>
</div>


